<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    tools:context=".ui.order.OrderActivity">

    <data>
        <variable
            name="vm"
            type="com.example.fastafappgp.ui.order.OrderViewModel" />

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin= "8dp"
        >

        <EditText
            android:id="@+id/search_drugs"
            android:layout_width="match_parent"
            android:layout_height ="wrap_content"
            android:inputType="text"
            android:background="@drawable/edit_input"
            android:drawableStart="@drawable/ic_search"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerOrder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/search_drugs"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/item_order"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginTop="18dp"/>






    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>